@model IndexViewModel

    <form method="post" asp-action="Admin">
        <div class="border p-3">
            <div class="form-group row">
                <h2 class="text-black-50 pl-3">Add Desk</h2>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-4">
                            <label>DeskName</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <input asp-for="@Model.NewDesk.Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="create" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>