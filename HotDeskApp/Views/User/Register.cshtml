@model HotDeskApp.Models.RegisterModel

<h2>Registration</h2>

<form asp-action="Register" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="col-4">
            <label asp-for="Login">Enter Login</label><br />
            <input type="text" asp-for="Login" class="form-control"/>
            <span asp-validation-for="Login" />
        </div>
        <div class="col-4">
            <label asp-for="Password">Enter password</label><br />
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" />
        </div>
        <div class="col-4">
            <label asp-for="ConfirmPassword">Repeat password</label><br />
            <input asp-for="ConfirmPassword" class="form-control"/>
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" class="btn" value="Registration" />
        </div>
    </div>
</form>